{
    "env": {
        "node": true,
        "es6": true
    },
    "ecmaFeatures": {
        "modules": true
    },
    "rules": {
        "comma-dangle": [2, "always-multiline"],
        "new-cap": [0],
        "no-shadow": [2, { "hoist": "never" }],
        "no-underscore-dangle": [0],
        "no-use-before-define": [2, "nofunc"]
    }
}
